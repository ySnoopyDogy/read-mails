{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "resolveJsonModule": true,

    "isolatedModules": true,
    "importHelpers": true,

    "newLine": "lf",
    "noEmitHelpers": true,
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,

    "noUnusedLocals": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "src"
  },
  "include": ["src/**/*"]
}
